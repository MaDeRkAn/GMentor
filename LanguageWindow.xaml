<Window x:Class="GMentor.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GMentor — Select Language"
        Height="260" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#0B1220">

    <Window.Resources>
        <SolidColorBrush x:Key="Surface"    Color="#0B1220"/>
        <SolidColorBrush x:Key="Panel"      Color="#0F172A"/>
        <SolidColorBrush x:Key="Card"       Color="#0F1A2B"/>
        <SolidColorBrush x:Key="CardBorder" Color="#1E2A44"/>
        <SolidColorBrush x:Key="Accent"     Color="#4BB3FD"/>
        <SolidColorBrush x:Key="Text1"      Color="#E7EDF8"/>
        <SolidColorBrush x:Key="Text2"      Color="#A5B3CC"/>

        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="GhostBtn" TargetType="Button" BasedOn="{StaticResource PrimaryBtn}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource Surface}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- title bar -->
        <Grid Grid.Row="0"
              Background="{StaticResource Panel}"
              MouseLeftButtonDown="OnTitleBarDrag">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0">
                <Image Source="assets/gmentor.ico"
                       Width="16" Height="16"
                       Margin="0,0,8,0"/>
                <TextBlock Text="GMentor — Select Language"
                           Foreground="{StaticResource Text1}"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="✕"
                    Width="34" Height="28"
                    Margin="0,0,6,0"
                    Background="Transparent"
                    Foreground="{StaticResource Text1}"
                    BorderBrush="{StaticResource CardBorder}"
                    BorderThickness="1"
                    Click="OnCancel"/>
        </Grid>

        <!-- body -->
        <Border Grid.Row="1"
                Margin="16,12,16,12"
                Style="{StaticResource CardPanel}">
            <StackPanel>
                <TextBlock Text="Choose your language"
                           Foreground="{StaticResource Text1}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="You can change this later from GMentor's menu."
                           Foreground="{StaticResource Text2}"
                           FontSize="12"
                           Margin="0,0,0,16"/>

                <StackPanel Margin="8,0,0,0">
                    <RadioButton x:Name="RbEnglish"
                                 Content="English (Recommended)"
                                 IsChecked="True"
                                 Foreground="{StaticResource Text1}"
                                 Margin="0,0,0,6"/>
                    <RadioButton x:Name="RbTurkish"
                                 Content="Türkçe"
                                 Foreground="{StaticResource Text1}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- footer -->
        <Border Grid.Row="2"
                Background="{StaticResource Panel}"
                BorderBrush="{StaticResource CardBorder}"
                BorderThickness="1,1,0,0"
                Padding="12,8">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource GhostBtn}"
                        Margin="0,0,8,0"
                        Click="OnCancel"/>
                <Button Content="Continue"
                        Style="{StaticResource PrimaryBtn}"
                        Click="OnContinue"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

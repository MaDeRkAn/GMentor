<Window x:Class="GMentor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:services="clr-namespace:GMentor.Services"
        mc:Ignorable="d"
        Title="GMentor"
        Height="780" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="#0B1220"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        StateChanged="OnStateChanged"
        Closing="OnClosing">

    <!-- Remove the OS gray strip & get proper drag/resize behavior -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="36"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ===== Theme ===== -->
    <Window.Resources>
        <!-- Core palette -->
        <SolidColorBrush x:Key="SurfaceBrush"    Color="#0B1220"/>
        <SolidColorBrush x:Key="PanelBrush"      Color="#111A2F"/>
        <SolidColorBrush x:Key="CardBrush"       Color="#0F1A2B"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E2A44"/>
        <SolidColorBrush x:Key="AccentBrush"     Color="#4BB3FD"/>
        <SolidColorBrush x:Key="Text1Brush"      Color="#E7EDF8"/>
        <SolidColorBrush x:Key="Text2Brush"      Color="#A5B3CC"/>
        <SolidColorBrush x:Key="ChipBrush"       Color="#17243C"/>
        <SolidColorBrush x:Key="HoverBrush"      Color="#1C2B49"/>

        <!-- Global text default -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Cards -->
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
        </Style>

        <!-- Headers / text -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="Muted" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text2Brush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="Background" Value="{StaticResource ChipBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chips -->
        <Style x:Key="Chip" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ChipBrush}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Title-bar menu styles (dark) -->
        <Style x:Key="TitleBarMenu" TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- MenuItem template (dark popup) -->
        <Style x:Key="DarkMenuItem" TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Root" Background="{TemplateBinding Background}">
                            <Grid>
                                <ContentPresenter Margin="6,2,6,2"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                                <Popup x:Name="SubMenu"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsSubmenuOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Fade">
                                    <Border Background="{StaticResource PanelBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="4"
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer CanContentScroll="True">
                                            <StackPanel IsItemsHost="True" Margin="2"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="Role" Value="TopLevelHeader">
                                <Setter Property="Padding" Value="10,4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Separator">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="Background" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <!-- Window buttons styling -->
        <Style x:Key="TitleBtn" TargetType="Button">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="2,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- App menu pill button in title bar -->
        <Style x:Key="AppMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ChipBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource Text1Brush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="{StaticResource HoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="#182647"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== Custom Title Bar ===== -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="0,0,0,1"
                shell:WindowChrome.IsHitTestVisibleInChrome="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left drag area -->
                <Grid Grid.Column="0"
                      shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <!-- App menu pill (logo + title + hamburger) -->
                <Button x:Name="AppMenuButton"
                        Grid.Column="1"
                        Style="{StaticResource AppMenuButtonStyle}"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True"
                        Click="OnAppMenuClick"
                        ToolTip="{services:L Menu.App}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Assets/GMentor.ico"
                               Width="20"
                               Height="20"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <TextBlock Text="GMentor"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                        <Path Width="16"
                              Height="16"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Stroke="{StaticResource Text1Brush}"
                              StrokeThickness="2.2"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Data="M2,4 L14,4 M2,8 L14,8 M2,12 L14,12" />
                    </StackPanel>
                </Button>

                <!-- Drag filler -->
                <Grid Grid.Column="2"
                      shell:WindowChrome.IsHitTestVisibleInChrome="True"/>

                <!-- Window controls -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Style="{StaticResource TitleBtn}" Click="OnMinimizeClick">
                        <Path Data="M 3 12 L 21 12" Stroke="{StaticResource Text1Brush}" StrokeThickness="2" StrokeEndLineCap="Round"/>
                    </Button>
                    <Button Style="{StaticResource TitleBtn}" Click="OnMaximizeClick">
                        <Path Data="M3,6 L21,6 21,18 3,18 Z" Stroke="{StaticResource Text1Brush}" StrokeThickness="1.6" Fill="Transparent"/>
                    </Button>
                    <Button Style="{StaticResource TitleBtn}" Click="OnCloseClick">
                        <Path Data="M4,6 L20,18 M20,6 L4,18" Stroke="{StaticResource Text1Brush}" StrokeThickness="1.8" StrokeEndLineCap="Round"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== Top info bar ===== -->
        <Border Grid.Row="1"
                Style="{StaticResource CardPanel}"
                Margin="16,12,16,0"
                Padding="12"
                shell:WindowChrome.IsHitTestVisibleInChrome="False">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Foreground="{StaticResource Text2Brush}">
                        <Run Text="{services:L Text.Provider}"/>
                        <Run x:Name="LblProvider" Text="Gemini" Foreground="{StaticResource Text1Brush}"/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource Text2Brush}" Margin="12,0,0,0">
                        <Run Text="{services:L Text.Model}"/>
                        <Run x:Name="LblModel" Text="gemini-2.5-flash" Foreground="{StaticResource Text1Brush}"/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource Text2Brush}" Margin="12,0,0,0">
                        <Run Text="{services:L Text.KeyLabel}"/>
                        <Run x:Name="LblKey" Text="not set" Foreground="{StaticResource Text1Brush}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Right side: Game chip -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Border x:Name="GameChipBorder"
                            Style="{StaticResource Chip}">
                        <TextBlock x:Name="LblGameChip"
                                   Foreground="{StaticResource AccentBrush}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Text="Game: Default"/>
                    </Border>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ===== Content area ===== -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Actions + Help -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <!-- Actions -->
                <Border Style="{StaticResource CardPanel}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{services:L Text.Actions}" Style="{StaticResource SectionHeader}"/>

                        <!-- Dynamic shortcuts list -->
                        <Border Background="{StaticResource ChipBrush}"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="10"
                                Margin="0,0,0,12">
                            <ItemsControl x:Name="ShortcutsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="{StaticResource Text1Brush}"
                                                   Text="{Binding}"
                                                   FontSize="14"
                                                   Margin="0,0,0,6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <TextBlock Text="{services:L Text.LastResponse}"
                                   Foreground="{StaticResource Text2Brush}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <Button x:Name="CopyBtn"
                                Content="{services:L Text.CopySteps}"
                                Click="OnCopy"
                                Style="{StaticResource OutlineButton}"/>
                        <Button x:Name="OpenYouTubeBtn"
                                Content="{services:L Text.OpenBestTutorial}"
                                Click="OnOpenYouTube"
                                Style="{StaticResource OutlineButton}"/>
                    </StackPanel>
                </Border>

                <!-- Help / Privacy -->
                <Border Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <TextBlock Text="{services:L Text.HelpPrivacy}" Style="{StaticResource SectionHeader}"/>
                        <Button Content="{services:L Text.ChangeProviderKey}"
                                Click="OnChangeProviderKey"
                                Style="{StaticResource OutlineButton}"/>
                        <Button Content="{services:L Text.UsageLimits}"
                                Click="OnHelpUsage"
                                Style="{StaticResource OutlineButton}"/>
                        <Button Content="{services:L Text.HowToUse}"
                                Click="OnHelpHowTo"
                                Style="{StaticResource OutlineButton}"/>
                        <TextBlock Margin="0,10,0,0"
                                   Style="{StaticResource Muted}"
                                   TextWrapping="Wrap"
                                   Text="{services:L Text.PrivacyNote}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- RIGHT: Preview (short) over Response (tall) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="280"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Preview -->
                <Border Grid.Row="0" Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{services:L Text.Preview}" Style="{StaticResource SectionHeader}" Grid.Row="0"/>

                        <Border Grid.Row="1"
                                Background="{StaticResource PanelBrush}"
                                CornerRadius="8"
                                Padding="6"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                            <Image x:Name="PreviewImage"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Response -->
                <!-- Response -->
                <Border Grid.Row="2" Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header row: title + Search badge + expand/collapse all -->
                        <DockPanel Grid.Row="0" LastChildFill="False">
                            <TextBlock Text="{services:L Text.Response}"
                       Style="{StaticResource SectionHeader}"
                       DockPanel.Dock="Left"/>

                            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right"
                        VerticalAlignment="Center">
                                <Button x:Name="ExpandAllBtn"
                        Content="{services:L Text.ExpandAll}"
                        Style="{StaticResource OutlineButton}"
                        Margin="0,0,4,0"
                        Click="OnExpandAllSections"/>
                                <Button x:Name="CollapseAllBtn"
                        Content="{services:L Text.CollapseAll}"
                        Style="{StaticResource OutlineButton}"
                        Margin="0,0,4,0"
                        Click="OnCollapseAllSections"/>
                            </StackPanel>

                            <TextBlock x:Name="BadgeSearch"
                       Text="{services:L Text.SearchBacked}"
                       Visibility="Collapsed"
                       Foreground="{StaticResource AccentBrush}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
                        </DockPanel>

                        <!-- Sections list -->
                        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="ResponseSectionsPanel"
                        Margin="0,4,0,0"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- ===== Status bar ===== -->
        <StatusBar Grid.Row="3"
                   Background="{StaticResource PanelBrush}"
                   Foreground="{StaticResource Text2Brush}">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"
                           Text="{services:L Status.Ready}"
                           FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
